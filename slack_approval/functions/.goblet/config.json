{
    "stages": {
        "request": {
            "function_name": "slack-request",
            "main_file": "request.py",
            "requirements_file": "requirements-request.txt",
            "custom_files": {
                "exclude": ["request.py", "provision.py", "provision_*"]
            },
            "cloudfunction": {
                "secretEnvironmentVariables": [
                    {
                        "key": "APPROVERS_CHANNEL_HOOK",
                        "secret": "channel-webhook",
                        "version": "latest"
                    },
                    {
                        "key": "REQUESTERS_CHANNEL_HOOK",
                        "secret": "channel-webhook",
                        "version": "latest"
                    }
                ],
                "serviceAccountEmail": "" 
            }
        },
        "provision": {
            "function_name": "slack-provision",
            "main_file": "provision.py",
            "requirements_file": "requirements-provision.txt",
            "custom_files": {
                "exclude": ["request.py", "provision.py"]
            },
            "cloudfunction": {
                "secretEnvironmentVariables": [
                    {
                        "key": "SIGNING_SECRET",
                        "secret": "signing-secret",
                        "version": "latest"
                    },
                    {
                        "key": "REQUESTERS_CHANNEL_HOOK",
                        "secret": "channel-webhook",
                        "version": "latest"
                    }
                ],
                "maxInstances": 2,
                "serviceAccountEmail": "" 
            }
        }
    }
}